{
  "info": {
    "name": "Inventory Order API",
    "description": "API collection for Item, Inventory, and Order management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "itemId", "value": "1" },
    { "key": "inventoryId", "value": "1" },
    { "key": "orderId", "value": "1" }
  ],
  "item": [
    {
      "name": "Item",
      "item": [
        {
          "name": "Get Item",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/items/{{itemId}}"
          }
        },
        {
          "name": "List Items (paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/items?page=0&size=10&sortBy=id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "items"],
              "query": [
                { "key": "page", "value": "0" },
                { "key": "size", "value": "10" },
                { "key": "sortBy", "value": "id" }
              ]
            }
          }
        },
        {
          "name": "Save Item",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sample Item\",\n  \"description\": \"Item description\",\n  \"stock\": 100\n}"
            },
            "url": "{{baseUrl}}/api/items"
          }
        },
        {
          "name": "Edit Item",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Item Name\",\n  \"description\": \"Updated description\",\n  \"stock\": 100\n}"
            },
            "url": "{{baseUrl}}/api/items/{{itemId}}"
          }
        },
        {
          "name": "Delete Item",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/items/{{itemId}}"
          }
        }
      ]
    },
    {
      "name": "Inventory",
      "item": [
        {
          "name": "Get Inventory",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/inventories/{{inventoryId}}"
          }
        },
        {
          "name": "List Inventories (paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/inventories?page=0&size=10&sortBy=id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventories"],
              "query": [
                { "key": "page", "value": "0" },
                { "key": "size", "value": "10" },
                { "key": "sortBy", "value": "id" }
              ]
            }
          }
        },
        {
          "name": "Save Inventory (Top Up)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": 1,\n  \"type\": \"T\",\n  \"quantity\": 50\n}"
            },
            "url": "{{baseUrl}}/api/inventories"
          }
        },
        {
          "name": "Save Inventory (Withdrawal)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": 1,\n  \"type\": \"W\",\n  \"quantity\": 10\n}"
            },
            "url": "{{baseUrl}}/api/inventories"
          }
        },
        {
          "name": "Edit Inventory",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": 1,\n  \"type\": \"T\",\n  \"quantity\": 25\n}"
            },
            "url": "{{baseUrl}}/api/inventories/{{inventoryId}}"
          }
        },
        {
          "name": "Delete Inventory",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/inventories/{{inventoryId}}"
          }
        }
      ]
    },
    {
      "name": "Order",
      "item": [
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/orders/{{orderId}}"
          }
        },
        {
          "name": "List Orders (paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders?page=0&size=10&sortBy=id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"],
              "query": [
                { "key": "page", "value": "0" },
                { "key": "size", "value": "10" },
                { "key": "sortBy", "value": "id" }
              ]
            }
          }
        },
        {
          "name": "Save Order",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": 1,\n  \"quantity\": 5\n}"
            },
            "url": "{{baseUrl}}/api/orders"
          }
        },
        {
          "name": "Edit Order",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": 1,\n  \"quantity\": 3\n}"
            },
            "url": "{{baseUrl}}/api/orders/{{orderId}}"
          }
        },
        {
          "name": "Delete Order",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/api/orders/{{orderId}}"
          }
        }
      ]
    }
  ]
}
